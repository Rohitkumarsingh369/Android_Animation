<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relaytiveLayoutContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Page2">

    <RelativeLayout
        android:id="@+id/relativeLayoutCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/description_background"
        android:padding="10dp"
        android:transitionName="relativeLayoutCard_tr">

        <ImageView
            android:id="@+id/imageViewCircle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:transitionName="imageViewCircle_tr"
            app:srcCompat="@drawable/circle_image" />

        <View
            android:id="@+id/viewLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/imageViewCircle"
            android:layout_marginTop="10dp"
            android:background="@android:color/white"
            android:transitionName="viewLine_tr" />

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Lorem Ipsum"
            android:textColor="@color/colorFont1"
            android:textSize="20sp"
            android:transitionName="textViewTitle_tr" />

        <TextView
            android:id="@+id/textViewSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="139dp"
            android:layout_marginTop="40dp"
            android:layout_toEndOf="@+id/imageViewCircle"
            android:text="What is Lorem Ipsum?"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:transitionName="textViewSubtitle_tr"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textViewDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewCircle"
            android:layout_marginTop="50dp"
            android:text="@string/card_description"
            android:textSize="15sp"
            android:transitionName="textViewDescription_tr" />

        <TextView
            android:id="@+id/textViewAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="180dp"
            android:layout_marginTop="45dp"
            android:text="www.lipsum.com"
            android:transitionName="textViewAuthor_tr" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageViewRectangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:transitionName="imageViewRectangle_tr"
        app:srcCompat="@drawable/rectangle_image" />

</RelativeLayout>